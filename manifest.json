{
	"manifest_version": 2,
	"name": "HKEPC Plus",
	"version": "0.1.0",

	"description": "This extension is targeted for providing better user experience of surfing http://www.hkepc.com/forum.",
	"icons":{
		"16":"hkepc+.png",
		"64":"hkepc+.png",
		"128":"hkepc+.png"
	},

	"browser_action": {
		"default_icon": "hkepc+.png",
		"default_popup": "popup.html"
	},

	"author":"logap@me.com",

	"background": {
		"matches": ["http://www.hkepc.com/forum/*", "https://www.hkepc.com/forum/*"],
		"scripts": ["plugins/q/q.js","background.js"],
		"persistent": false
	},

	"web_accessible_resources": [
		"bootstrap/*",
		"popup.html",
		"templates/*",
		"inject.css",
		"background.js"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; script-src 'self' 'unsafe-inline'; object-src 'self'",

	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": ["http://www.hkepc.com/forum/*", "https://www.hkepc.com/forum/*"],
			"js": [
				"plugins/jquery/jquery-2.1.3.js",
				"plugins/bootstrap/js/bootstrap.min.js",
				"plugins/rainbow/rainbow-custom.min.js",
				"plugins/handlebar/handlebars-v3.0.3.js",
				"content.js"
			],
			"css":[
				"plugins/bootstrap/css/bootstrap.min.css",
				"plugins/rainbow/monokai.css"
			]
		}
	],
	"options_page": "content/options/index.html",

	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"http://www.hkepc.com/forum/*"
	]
}
